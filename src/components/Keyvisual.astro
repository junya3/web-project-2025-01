---
import main from '/src/assets/image/main/mainvisual.svg';
import text from '/src/assets/image/main/text.svg';
---

<div class="wrap">
  <div class="visual">
    <div class="bg"></div>
    <img id="main" src={main.src} alt="メインビジュアル" />
    <img id="text" src={text.src} alt="学園祭テキスト" />
  </div>
  <div class="links">
    <a href="/">TECH.C.ホームページへ</a>
    <a href="/">ご意見・ご感想</a>
  </div>
</div>

<style>
  .wrap {
    width: 100%;
    height: calc(100dvh - var(--header-height));
    /* position: relative; */
  }
  .visual {
    #text {
      width: 50vw;
      height: auto;
      position: absolute;
      inset: 0;
      margin: auto;
      z-index: 20;
    }
    #main {
      position: absolute;
      margin: auto;
      inset: 0;

      width: 80vw;
      z-index: 10;
    }
    .bg {
      position: absolute;
      margin: auto;
      inset: 0;
      z-index: 0;

      background: url('/src/assets/image/main/bg.png');
      width: 100%;
      height: 50vh;
      background-size: cover;
    }
  }
  .links {
    width: fit-content;
    display: grid;
    gap: var(--inner-gap);

    position: absolute;
    right: 0;
    bottom: 80px;
    a {
      width: auto;
      height: fit-content;
      padding: 1rem;
      background: var(--btn-color-100);
      border-radius: 0.5rem 0 0 0.5rem;

      color: #fff;
      text-align: center;
      font-weight: 600;
      font-size: 0.875rem;
      &:nth-child(2) {
        background: var(--btn-color-200);
        color: var(--text-color-black);
      }
    }
  }
</style>
