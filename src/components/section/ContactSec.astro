---
import SecTitle from '/src/components/parts/SecTitle.astro';
---

<section id="contact">
  <SecTitle title="ご意見・ご感想" />
  <form action="" method="post">
    <div class="f_col">
      <label for="name">お名前</label>
      <input
        type="text"
        name="name"
        id="name"
        placeholder="山田　太郎"
        autocomplete="name"
      />
    </div>
    <div class="f_col">
      <label for="email">メールアドレス</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="tech@example.com"
        autocomplete="email"
      />
    </div>
    <div class="f_col">
      <label for="detail">ご意見・ご感想</label>
      <textarea
        name="detail"
        id="detail"
        rows="5"
        placeholder="ご意見やご感想をお待ちしております"
        autocomplete="off"></textarea>
    </div>
    <button type="submit">送信</button>
  </form>
</section>

<style>
  section {
    width: min(100% - 80px, 600px);
  }
  form {
    display: grid;
    gap: var(--gap);
    .f_col {
      display: grid;
      gap: var(--inner-gap);

      label {
        font-size: 1.125rem;
        font-weight: 600;
      }
      input,
      textarea {
        font-size: 0.875rem;
        padding: 0.5rem;
        color: var(--bg-color-200);
        border: 1px solid;
        border-radius: 0.4rem;

        /* 縦方向のみにする */
        resize: vertical;
        &::placeholder {
          color: inherit;
        }
      }
    }
    button {
      background-color: transparent;
      border: none;
      cursor: pointer;
      outline: none;
      padding: 0;
      appearance: none;

      font-size: 1rem;
      color: var(--text-color-white);
      font-weight: 600;

      display: block;
      border-radius: 0.4rem;
      padding: 0.75rem 0.5rem;
      background: var(--bg-color-100);
    }
  }
</style>
