<header>
  <h1>
    <a href="/">
      <img src="/src/assets/logo.svg" alt="Tech.c.のロゴ" />
    </a>
  </h1>
  <nav>
    <button class="burger">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </nav>
</header>

<style>
  header {
    display: grid;
    grid-template-columns: repeat(2, min-content);
    align-items: center;
    justify-content: space-between;
    padding-inline: 40px;
    height: 80px;
  }
  h1 {
    width: 400px;
  }
  .burger {
    aspect-ratio: 1/1;
    width: 40px;
    position: relative;
    transition: rotate 0.5s;
    span {
      display: block;
      width: 28px;
      height: 2px;
      position: absolute;
      background: #000;
      border-radius: 999px;
      transition:
        background 0.5s,
        rotate 0.5s,
        top 0.5s;
      rotate: 0;
      &:nth-child(1) {
        top: 30%;
        translate: 0 -50%;
      }
      &:nth-child(2) {
        top: 50%;
        translate: 0 -50%;
      }
      &:nth-child(3) {
        top: 70%;
        translate: 0 -50%;
      }
    }
    &.active {
      span {
        top: 50%;
        &:nth-child(1) {
          rotate: 45deg;
        }
        &:nth-child(2) {
          background: #0000;
        }
        &:nth-child(3) {
          rotate: -45deg;
        }
      }
    }
  }
  button {
    background-color: transparent;
    border: none;
    cursor: pointer;
    outline: none;
    padding: 0;
    appearance: none;
  }
</style>

<script>
  const burger = document.querySelector('.burger');

  burger?.addEventListener('click', () => {
    burger.classList.toggle('active');
  });
</script>
