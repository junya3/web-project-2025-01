---
import '/src/assets/css/reset.css';
import '/src/assets/css/font.css';

import Header from '/src/components/Header.astro';
import Footer from '/src/components/Footer.astro';
const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --header-height: 80px;

    --inner-gap: 0.5rem;

    /* color */

    --btn-color-100: #db4343;
    --btn-color-200: #eaeaea;

    --bg-color-100: #030e12;
    --bg-color-200: #eaeaea;
    --bg-color-300: #f4f5f5;

    --text-color-black: #212121;
    --text-color-white: #fff;

    --primary-color-100: #f6e0ec;
    --primary-color-200: #cae6f4;
    --primary-color-300: #fbe168;
  }
  html {
    font-size: 16px;
    box-sizing: border-box;
    font-family: 'LINESeedJP_OTF';
    font-weight: 300;
    line-height: 1.5;
    letter-spacing: 0.04em;
    background: var(--bg-color-300);
  }
  body {
    overflow-x: hidden;
    &.no-scroll {
      width: 100%;
      overflow: hidden;
    }
  }
  section {
    width: min(100%, 1100px);
    margin-inline: auto;
    padding: 60px 14px;
    display: grid;
    gap: 48px;
  }
  a {
    color: #212121;
    line-height: 1.5;
    letter-spacing: 0.04em;
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
</style>
