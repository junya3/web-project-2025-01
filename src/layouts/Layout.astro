---
import '/src/assets/css/reset.css';
import '/src/assets/css/font.css';

import Header from '/src/components/Header.astro';
import Footer from '/src/components/Footer.astro';
const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --header-height: 80px;

    /* color */

    --btn-color-100: #db4343;
    --btn-color-200: #eaeaea;

    --bg-color-100: #030e12;
    --bg-color-200: #eaeaea;
    --bg-color-300: #f4f5f5;

    --text-color-black: #212121;
    --text-color-white: #fff;

    --primary-color-100: #f6e0ec;
    --primary-color-200: #cae6f4;
    --primary-color-300: #fbe168;
  }
  html {
    font-size: 16px;
    box-sizing: border-box;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  a {
    color: #212121;
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
</style>
